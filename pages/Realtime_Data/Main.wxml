    <view class="flex">
      <view class="flex-sub  padding-sm margin-xs radius"> <button class="btn3" bindtap="gotoPage1">
     <text class='icon-location text-gray'></text> {{locat}}</button></view>
      <view class="flex-sub  padding-sm margin-xs radius"> <button class="btn3" bindtap="fresh" disabled="{{diss}}">
      <text class='icon-refresh text-gray'></text> 刷新</button></view>
    </view>

<view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg" style=''>
  <view class="cu-item ">
    <text class='text-grey' style='text-align:left'>经度</text>
    <text class='text-grey' style='text-align:right'>{{lon}}</text>
  </view>
  <view class="cu-item">
    <text class='text-grey' style='text-align:left'>纬度</text>
    <text class='text-grey' style='text-align:right'>{{lat}}</text>
  </view>
  <view class="cu-item">
    <text class='text-grey' style='text-align:left'>云量：{{cloudcover}}</text>
    <text class='text' style='text-align:right;color:#3763BA ;font-weight:bolder'>{{scloudcover}}</text>
  </view>
  <view class="cu-item ">
    <text class='text-grey ' style='text-align:left'>大气视宁度：{{seeing}}</text>
    <text class='text' style='text-align:right;color:#3763BA ;font-weight:bolder'>{{sseeing}}</text>
  </view>
  <view class="cu-item ">
    <text class='text-grey' style='text-align:left'>大气透明度：{{transparency}}</text>
    <text class='text' style='text-align:right;color:#3763BA ;font-weight:bolder'>{{strans}}</text>
  </view>
  <view class="cu-item ">
    <text class='text-grey' style='text-align:left'>抬升指数：{{lifted_index}}</text>
    <text class='text' style='text-align:right;color:#3763BA ;font-weight:bolder'>{{slifted}}</text>
  </view>

  <view class="cu-item ">
    <text class='text-grey' style='text-align:left'>温度</text>
    <text class='text' style='text-align:right;color:#3763BA ;font-weight:bolder'>{{temp}}°C</text>
  </view>
</view>

    <view class="flex">
      <view class="flex-sub  padding-sm margin-xs radius"> <button class="btn1" hover-class='btn-hover' bindtap="gotoPage3"> 变化趋势</button></view>
      <view class="flex-sub  padding-sm margin-xs radius"> <button class="btn2" hover-class='btn-hover' bindtap="gotoPage6">观测建议</button></view>
