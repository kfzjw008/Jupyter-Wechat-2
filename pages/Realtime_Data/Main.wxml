  <view class='space'>
    <view class="stars ">
      <view class="star "></view>
      <view class="star pink "></view>
      <view class="star blue "></view>
      <view class="star yellow "></view>
    </view>
  </view>
  <view class='margin-top-sm' style='margin-bottom:50px'>
    <text style='font-size:15px ;color:#FFFFFF;text-align:center;line-height:0.6em;'>观测适宜度</text>
  </view>
  <text style='font-size:100px ;color:#FFFFFF;padding:0rpx;line-height:0.95em;'>{{P0}}</text>
